    "version": "0.2.0",
    "configurations": [        {
        "name": "Debug with GDB",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/wfc", // Path to your executable
        "args": [], // Command-line arguments for your program
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ],
        "preLaunchTask": "build", // Optional: Task to run before launching the debugger
        //"miDebuggerPath": "/path/to/gdb" // Path to the GDB executable
    }]
}